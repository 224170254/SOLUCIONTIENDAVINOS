<%- model_class = Formatoventum -%>
  <h3>Formatos</h3>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:unidades) %></th>
      <th><%= model_class.human_attribute_name(:costoadicional) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @formatoventa.each do |formatoventum| %>
      <tr>
        <td><%= link_to formatoventum.id, formatoventum_path(formatoventum) %></td>
        <td><%= formatoventum.descripcion %></td>
        <td><%= formatoventum.unidades %></td>
        <td><%= formatoventum.costoadicional %></td>
        <td>
          <%= link_to t('.edit', :default => "Editar"),
                      edit_formatoventum_path(formatoventum), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      formatoventum_path(formatoventum),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new") + " Formato"),
            new_formatoventum_path,
            :class => 'btn btn-primary' %>
