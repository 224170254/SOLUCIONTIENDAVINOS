<%- model_class = Bodega -%>
<div class="page-header">
  <h2>Listado de Bodegas</h2>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>id</th>
           <th>Rut</th>
      <th>Nombre Razon</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>telefono</th>
      <th>Fecha Ingreso</th>
      <th><%=t '.actions', :default => "Acciones" %></th>
    </tr>
  </thead>
  <tbody>
    <% @bodegas.each do |bodega| %>
      <tr>
        <td><%= link_to bodega.id, bodega_path(bodega) %></td>
		<td><%= bodega.rut %></td>
        <td><%= bodega.nombre %></td>
        <td><%= bodega.direccion %></td>
        <td><%= bodega.correo %></td>
        <td><%= bodega.telefono1 %></td>
        <td><%=l bodega.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => "Editar"),
                      edit_bodega_path(bodega), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => "Eliminar"),
                      bodega_path(bodega),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => "Nueva Bodega"),
            new_bodega_path,
            :class => 'btn btn-primary' %>
