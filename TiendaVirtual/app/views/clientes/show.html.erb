<%- model_class = Cliente -%>
 <h3>Cliente</h3>

<dl class="dl-horizontal">

  <dt><strong>Tipo Cliente:</strong></dt>
  <dd>
  	<%if @cliente.estado == 0 %>
  		Persona
  	<%else%>
  		Empresa
  	<%end%> 	
  </dd>
  <dt><strong>Rut:</strong></dt><dd><%= @cliente.Rut %></dd>
  
  	<%if @cliente.estado == 0 %>
	  	<dt><strong>Nombre:</strong></dt>
	  	<dd><%= @cliente.NombreApellido %></dd>
  	<%else%>
  		<dt><strong>Razon Social:</strong></dt>
  		<dd><%= @cliente.RazonSocial %></dd>  		
  	<%end%> 	
  <dt><strong>Direccion : </strong></dt><dd><%= @cliente.Direccion %></dd>
  <dt><strong>Telefono :</strong></dt><dd><%= @cliente.Telefono %></dd>
  <dt><strong>Celular:</strong></dt><dd><%= @cliente.Movil %></dd>
  <dt><strong>FechaCreacion/Nacimiento :</strong></dt><dd><%= @cliente.FechaNacimiento %></dd>
  <dt><strong>Email:</strong></dt><dd><%= @cliente.email %></dd>
  <dt><strong>Contrasena:</strong></dt><dd><%= @cliente.Contrasena %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => 'Volver'),clientes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => "Editar"),
              edit_cliente_path(@cliente), :class => 'btn' %>
  <%= link_to t('.destroy', :default =>"Eliminar"),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
