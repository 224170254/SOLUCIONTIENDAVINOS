<%= form_for @cliente, :html => { :class => 'form-horizontal' } do |f| %>
  
   <div class="control-group">
   	<%= f.label :estado, "Tipo Cliente" , :class => 'control-label' %>
    <div class="controls">
      <%= f.select :estado,[['Persona',0],['Empresa',1]] , :class => 'select_field' %>
    </div>

  </div>

  <div class="control-group">
    <%= f.label :Rut, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Rut, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :NombreApellido, 'Nombre y Apellido', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :NombreApellido, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :RazonSocial, 'Razon Social', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :RazonSocial, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Direccion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Direccion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Telefono, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Telefono, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Movil, 'Celular' ,:class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :Movil, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :FechaNacimiento, 'Fecha Nac-Creacion', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :FechaNacimiento, :class => 'date_select' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Contrasena, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :Contrasena, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clientes_path, :class => 'btn' %>
  </div>
<% end %>
