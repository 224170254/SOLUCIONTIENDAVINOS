<%- model_class = Producto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:TipoProducto) %></th>
      <th><%= model_class.human_attribute_name(:Descripcion) %></th>
      <th><%= model_class.human_attribute_name(:capacidad) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:idCategoria) %></th>
      <th><%= model_class.human_attribute_name(:Origen) %></th>
      <th><%= model_class.human_attribute_name(:Gastronomia) %></th>
      <th><%= model_class.human_attribute_name(:Cata) %></th>
      <th><%= model_class.human_attribute_name(:Temperatura) %></th>
      <th><%= model_class.human_attribute_name(:anada) %></th>
      <th><%= model_class.human_attribute_name(:crianza) %></th>
      <th><%= model_class.human_attribute_name(:uva) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= link_to producto.id, producto_path(producto) %></td>
        <td><%= producto.TipoProducto %></td>
        <td><%= producto.Descripcion %></td>
        <td><%= producto.capacidad %></td>
        <td><%= producto.comentario %></td>
        <td><%= producto.idCategoria %></td>
        <td><%= producto.Origen %></td>
        <td><%= producto.Gastronomia %></td>
        <td><%= producto.Cata %></td>
        <td><%= producto.Temperatura %></td>
        <td><%= producto.anada %></td>
        <td><%= producto.crianza %></td>
        <td><%= producto.uva %></td>
        <td><%=l producto.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_producto_path(producto), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      producto_path(producto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_producto_path,
            :class => 'btn btn-primary' %>
